<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OAuth Demo</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-logo">
        <div class="container">
            <div class="navbar-header">
                <a href="@Url.Content("~/")"><img src="https://accounts.compliashield.com/Content/logos/samples-health-choice-vert.png" title="OAuth Test" /></a>
            </div>
        </div>
    </div>
    <div class="navbar navbar-2 navbar-inverse">
        <div class="container">
            <div class="navbar-header navbar-header-menu">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Demo OAuth", "Index", "OAuthTest", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul id="navBarMain" class="nav navbar-nav navbar-primary">
                    @*@if (Request.IsAuthenticated)
                        {
                                    <li><a href="https://accounts.compliashield.com/Account" target="_blank">@Html.ActionLink("CompliaShield Account", "Index", "Default")</a></li>
                                }*@
                    @*<li>@Html.ActionLink("About", "About", "Default")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Default")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center"><a href="https://www.compliashield.com" target="_blank"><img src="https://accounts.compliashield.com/Content/logos/compliashield-notice.png" border="0" alt="CompliaShield" /></a></p>
            <p class="text-center text-muted small-note-basic" style="font-size: 0.8em">&copy; @DateTime.Now.Year - JFM Concepts, LLC</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
